a=int(input())
b=int(input())
c=int(input())
s=(a+b+c)/2
area=(s*(s-a)*(s-b)*(s-c))**0.5
print('%.f'%area)


DECIMAL TO OCTAL

def decimal_to_octal(decimal):
    octal = ""
    while decimal > 0:
        remainder = decimal % 8  
        octal = str(remainder) + octal  
        decimal = decimal // 8
    return octal
decimal = int(input())
octal = decimal_to_octal(decimal)
print(octal)
